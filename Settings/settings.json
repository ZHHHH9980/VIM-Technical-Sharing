  // INSERT Mode
  "vim.insertModeKeyBindingsNonRecursive": [
    {
        "before": [
            ".",
            "l",
            "o",
            "g"
        ],
        "after": [
            "<Esc>",
            "v",
            "^",
            "\"",
            "a",
            "d",
            "a",
            "c",
            "o",
            "n",
            "s",
            "o",
            "l",
            "e",
            ".",
            "l",
            "o",
            "g",
            "(",
            "'",
            "<Esc>",
            "\"",
            "a",
            "p",
            "l",
            "a",
            ",",
            "<Esc>",
            "\"",
            "a",
            "p"
        ]
    },
    {
      "before": [".", "p", "r", "n"],
      "after": [
          "<Esc>",       // 退出插入模式
          "v", "^",      // 选择到行首（包含变量名）
          "\"", "a", "d",// 剪切到寄存器a
          "a",           // 进入插入模式（在光标后插入）
          // System.out.println(" + " + a + ");"
          "S",
          "y",
          "s",           // 删除选中内容并进入插入模式
          "t",
          "e",
          "m",     // 输入 System
          ".",
          "o", "u", "t",// 输入 out
          ".",
          "p",
          "r",
          "i",
          "n",
          "t",
          "l",
          "n",
          "(",
          "'",
          "<Esc>",
          "\"",
          "a",
          "p",
          "l",
          "a",
          ",",
          "<Esc>",
          "\"",
          "a",
          "p",
          "l",
          "a",
          ";"
      ]
    },
    {
      "before": [".", "p", "r", "i"],
      "after": [
        "<Esc>",       // 退出插入模式
        "v", "^",      // 选择到行首（与Java完全相同的选择方式）
        "\"", "a", "d",// 剪切到寄存器a
        "a",           // 进入插入模式（光标后插入）
        
        // 开始构建 print("变量名", 变量名)
        "p", "r", "i", "n", "t", 
          "(",
          "'",
          "<Esc>",
          "\"",
          "a",
          "p",
          "l",
          "a",
          ",",
          "<Esc>",
          "\"",
          "a",
          "p",
          "l",
          "a",
          ";"
      ]
    }
  ],

